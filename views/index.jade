extends layout

block content  

  ul
    for startup in startups
      for startupIn in startup
        h1=startupIn.title
        a(href="http://"+startupIn.body.url, target="_blank") Visit Us     
        h3=startupIn.body.founders
        h3=startupIn.body.city

    else
      li sorry, no startups!


  div(id="addCompany")
    h2 Add Company 
    div
      label Company Name: 
      input(type='text', name='name')
    div
      label Email Address:
      input(type='text', name='email')
    div
      label Page url:
      input(type='text', name='url')
    div
      button(id="submit") Submit