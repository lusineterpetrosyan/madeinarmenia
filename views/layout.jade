html
	head
		title armenia
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel='stylesheet', href='/stylesheets/style.css')		
		

	body(id="sss")		
		header
			div(class="shade")
				h1 Made In Armenia
				h2 a collection of tech companies made in 
					span( style="color: #d1d1d1") armenia 		

				div(class="joinblock")
					img(src="/img/check.png")
					button(class="join") Join Us
			nav
				button(class="list") List View
				button(class="grid") Grid View

			div(id="form" class="form")
				button(class="close") X
				h2 Add Company
				label Company Name: 
					input(type='text', name='cName')
				label Email Address:
					input(type='text', name='email')
				label Page url:	
					input(type='text', name='url')
				label City:
					input(type='text', name='city')
				label Founders:
					input(type='text' class='founder_input' class='input')
					button(class="add_founder") Add
					ul(class="founders")
				form
					label Logo
						input(input type="file" name="file" id="file")
						input(type="submit" name="submit" value="Upload Logo")
				div(id="logos")
		block content


		script(type="text/JavaScript",src="/javascripts/jq.js")
		script(type="text/JavaScript",src="/javascripts/_.js")
		script(type="text/JavaScript",src="/javascripts/bb.js")
		script(type="text/JavaScript",src="/javascripts/app.js")