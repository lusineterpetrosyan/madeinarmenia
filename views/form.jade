extands leyout

html
  head
    title
    link(rel='stylesheet', href='stylesheets/bootstrap.min.css')
  body
    .container
      .page-header
        h1 Contacts
      form#addContact.form-horizontal
        h1 Add Contact
        div
          label(for='first_name') First Name: 
          input(id="first_name",type='text', name='first_name')
        div
          label(for='last_name') Last Name: 
          input(id="last_name",type='text', name='last_name')
        div
          label(for='email_address') Email Address:
          input(id="email_address",type='text', name='email_address')
        div
          label(for='mobile_number') Mobile Number:
          input(id="mobile_number",type='text', name='mobile_number')
        div
          input(type='submit', value='Add Contact', style='margin-top: 5px;')
      